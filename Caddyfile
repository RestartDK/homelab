# Cockpit (proxy to host)
admin.{env.DOMAIN} {
	reverse_proxy host.docker.internal:{env.COCKPIT_PORT} {
		transport http {
			tls
			tls_insecure_skip_verify
		}
	}
	tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
		resolvers 1.1.1.1
	}
}
