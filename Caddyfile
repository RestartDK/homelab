# Glance dashboard
dashboard.{env.DOMAIN} {
	reverse_proxy glance:{env.GLANCE_PORT}
	tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
		resolvers 1.1.1.1
	}
}

# Komga service
library.{env.DOMAIN} {
	reverse_proxy komga:{env.KOMGA_PORT}
	tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
		resolvers 1.1.1.1
	}
}

